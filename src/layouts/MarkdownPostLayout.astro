---
import BaseLayoutforposts from './BaseLayoutforposts.astro';
const { frontmatter } = Astro.props;
---
<BaseLayoutforposts pageTitle={frontmatter.title}>
  <div class="container">
    <div class="tags-pubdate">
   <a class="Back-btn" href="/blog/"><i>&larr; </i> Back</a><br><br><br>
  <div class="tags">
      {frontmatter.tags.map((tag) => (  
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
  </div>
    <p class="PubDate">{frontmatter.pubDate.slice(0,10)}</p>
  </div>
  
  <p class="title">{frontmatter.title}</p>
  <p class="author">Written by {frontmatter.author}</p>
  <img class="Image" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
  
<slot />
</div>
</BaseLayoutforposts.astro>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Exo:ital,wght@0,700;1,700&family=Libre+Baskerville&family=Poppins:wght@700&display=swap" rel="stylesheet">
<style>
  .description{
    font-family: "Exo";
    font-weight: bold;
  }
        .author{
          font-family: 'Exo';
        }


        .title{
          font-size:30px;
          font-family: 'Exo';
        }

        .PubDate{
          font-size:20px;
          color: grey;
          font-family: 'Exo';
        }


      .Back-btn{
        font-size:25px;
        color: #757573;
        text-decoration:underline grey;
      }

      .container{
        margin-top:80px;
        display: flex;
        flex-direction: column;
        text-align: start;
        margin-left: 300px;
        margin-right: 300px;
      }


    img{
      border-radius:15px;
      max-width:900px;
      width: auto;
      height:auto;
    }



    a {
      color: #00539F;
    }
  
    .tags {
      display: flex;
      flex-wrap: wrap;
      margin: 0 auto;
    }

    .tags a{
      text-decoration:none;
      color: black;
      font-family: 'Exo', sans-serif;
    }
  
    .tag {
      box-shadow:0px 3px 20px -4px black;
      margin: 0.25em;
      border: none;
      border-radius: 50px;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: white;
    }

    .tag:hover {
      transform: translateY(-5px);
      transition: transform 200ms;
    }
  </style>
